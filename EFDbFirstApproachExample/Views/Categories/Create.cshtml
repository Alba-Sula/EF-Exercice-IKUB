@model EFDbFirstApproachExample.Models.Category
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Create Category</h2>

@using (Html.BeginForm("Create", "Categories", FormMethod.Post))
{
    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.Label("Category Name")
            @Html.TextBoxFor(x => x.CategoryName, new { placeholder = "Category Name", @class = "form-control" })

        </div>
    </div>
    <button type="submit" class="btn btn-success"> Create</button>
    @Html.ActionLink("Cancel", "Index", "", new { @class = "btn btn-danger" })
}
